process {

    executor = 'slurm'

    queue = 'burst'
    clusterOptions = '-A bsd --qos=default --nodes=1'

    cpus   = 4
    memory = '11 GB'
    time   = '10h'
}

singularity {
    enabled    = true
    autoMounts = true
    cacheDir   = '/lustre/or-scratch/cades-bsd/jkg/singularity_cache'
    pullTimeout = '60m'
}

env {
    NXF_HOME = '/lustre/or-scratch/cades-bsd/jkg/work/.nextflow'

    APPTAINER_TMPDIR   = '/lustre/or-scratch/cades-bsd/jkg/apptainer_tmp'
    APPTAINER_CACHEDIR = '/lustre/or-scratch/cades-bsd/jkg/apptainer_cache'
}
